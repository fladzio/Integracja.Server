@using Integracja.Server.Web.Areas.Kategorie.Models.CategoryForQuestion
@model CategoryForQuestionViewModel

@section Styles
{
    <link rel="stylesheet" href="~/css/Kategorie/_CategorySelect.css" />
}

@section Scripts
{
    @* aktywacja DataTables dla tabeli z _CategorySelect *@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script src="~/js/Shared/DataTables.js"></script>
}

@{ await Html.RenderPartialAsync("~/Views/Shared/Alerts/_AlertsList.cshtml", Model.Alerts);}

@*wybór i dodawanie kategorii*@
<div class="row">
    <div class="col-md-10">
        <h2>Wybierz kategorię...</h2>
        <br />

        <a class="btn btn-primary"
           asp-action="@nameof(ICategoryForQuestionActions.GotoQuestionCreate)"
           asp-route-id="@Model.CategoryFormModel.Category.Id">
            Dalej...
        </a>
        <br />
        <br />

        @{ Model.CategorySelectModel.CategorySelected = Model.CategoryFormModel.Category.Id;} @*do kontrolera*@
        @{ await Html.RenderPartialAsync("~/Areas/Kategorie/Views/Shared/_CategorySelectTable.cshtml", Model.CategorySelectModel);}

        @*dodawanie kategorii*@
        <h2>Lub stwórz nową</h2>
        <br />

        @{ await Html.RenderPartialAsync("~/Areas/Kategorie/Views/Shared/_CategoryCreateModal.cshtml", Model.CategoryFormModel);}

    </div>
</div>