@using Integracja.Server.Web.Areas.Kategorie.Models.Shared
@model CategorySelectTableViewModel


<div class="table-wrapper-scroll-y">
    <table class="table table-bordered table-striped data-table text-wrap">
        <colgroup>
            <col style="word-wrap: break-word; width: 85%;">
            <col style="word-wrap: break-word; width: 15%;">
        </colgroup>
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Ilość pytań</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Categories.Count; i++)
            {
                <tr class="@(Model.CategorySelected==Model.Categories[i].Id ? "category-selected" : "")">
                    <td>

                        <a class="btn btn-light save-scroll"
                           asp-action="@nameof(ICategorySelectTableActions.CategoryRead)"
                           asp-route-id="@Model.Categories[i].Id">
                            @Model.Categories[i].Name
                        </a>
                    </td>
                    <td>@Model.Categories[i].QuestionsCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>

