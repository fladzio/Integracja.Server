@using Integracja.Server.Web.Models.Shared.Category
@using Integracja.Server.Web.Areas.Kategorie.Models.Shared
@model List<CategoryModel>

<div class="table-wrapper-scroll-y">
    <table class="table table-bordered table-striped data-table">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Ilość pytań</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].QuestionsCount</td>
                    <td>
                        <a asp-action="@nameof(ICategoryTableActions.GotoCategoryRead)" asp-route-id="@Model[i].Id">Pytania</a> |
                        <a asp-action="@nameof(ICategoryTableActions.GotoCategoryDelete)" asp-route-id="@Model[i].Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
