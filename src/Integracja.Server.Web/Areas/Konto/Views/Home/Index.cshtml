@using Integracja.Server.Web.Areas.Konto.Models
@using static Integracja.Server.Web.Areas.Konto.Models.HomeViewModel
@using static Integracja.Server.Web.Areas.Konto.Models.IHomeActions
@model HomeViewModel

@{
    var username = ViewData["Name"];
}

<link rel="stylesheet" href="~/css/konto.css" />

<div class="container-fluid konto h-100">
    <div class="row">
        <div class="col-12 col-md-4 pt-5 d-flex justify-content-center username">
            <div>
                <img src="@Url.Action("Picture")" class="profile_picture rounded-circle mb-2 mt-4" />
                <p> @username </p>
            </div>
        </div>

        <div class="col-12 col-md-8 pt-5 dane_konta">

            <p id="title"> Szczegóły konta </p>

            <div class="row mt-3 pt-4 mb-4 pb-3 bord bord1">
                <div class="col-6 pr-5">
                    <p class="titles"> Nazwa użytkownika </p>
                    <p> @username </p>
                </div>
                <div class="col-6">
                    <p class="titles"> Zdjęcie profilowe </p>
                    <div class="form-group">
                        <form enctype="multipart/form-data" method="post" asp-action="@NameOfUploadPicture">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input asp-for="NewFile.File" name="file" type="file" accept=".jpg, .png" />
                            <input class="btn" type="submit" value="Upload" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="row mb-4 pb-3 bord">
                <div class="col-6 pr-5">
                    <p class="titles"> Adres e-mail </p>
                    <div class="form-outline">
                        <input type="text" class="form-control" id="phone" placeholder="Adres e-mail">
                    </div>
                </div>
                <div class="col-6">
                    <p class="titles"> Status adresu e-mail </p>
                    <p id="status_email"> potwierdzony </p>
                </div>
            </div>
            <div class="row">
                <div class="col-6 pr-5 mb-5">
                    <p class="titles"> Numer telefonu </p>
                    <div class="form-outline">
                        <input type="text" class="form-control" id="phone" placeholder="Numer telefonu">
                    </div>

                </div>
                <div class="col-6">
                    <p class="titles"> Status numeru telefonu </p>
                    <p id="status_numeru"> niepotwierdzony </p>
                </div>
            </div>

        </div>


    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}