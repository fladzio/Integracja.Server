@using Integracja.Server.Web.Areas.PanelAdmina.Models.Categories
@using static Integracja.Server.Web.Areas.PanelAdmina.Models.Categories.CategoriesViewModel.ActionNames
@model CategoriesViewModel

<h2>Kategorie</h2>
<br />

<div class="table-wrapper-scroll-y scrollbar-secondary">
    <table class="table table-bordered table-striped table-sm ">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nazwa</th>
                <th scope="col">ID właściciela</th>
                <th scope="col">Nazwa właściciela</th>
                <th scope="col">Publiczna</th>
                <th scope="col">Pytania</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.OwnerId</td>
                    <td>@category.OwnerUsername</td>
                    <td>@category.IsPublic</td>
                    <td>@category.QuestionsCount</td>
                    <td>
                        <a asp-action="@CategoryRead" asp-route-id="@category.Id">Edycja</a> | 
                        <a asp-action="@CategoryDelete" asp-route-id="@category.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />
<div>
    @{ await Html.RenderPartialAsync("_Category.cshtml", Model.Category);}
</div>
