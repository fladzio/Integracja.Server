@using Integracja.Server.Web.Areas.Gry.Models.Shared
@model GameQuestionFormViewModel

<form>
    <div class="row">

        <div class="col-md-6">

            <h2>Pytania do wyboru</h2>
            <br />

            <div class="table-wrapper-scroll-y">
                <table class="table data-table-game-questions table-card-layout">
                    <thead>
                        <tr>
                            <th scope="col">Treść</th>
                            <th scope="col">Kategoria</th>
                            <th scope="col">Akcja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Questions.Count; ++i)
                        {
                            <tr>
                                <td class="d-lg-table-cell">@Model.Questions[i].Content</td>
                                <td>@Model.Questions[i].CategoryName</td>
                                <td>
                                    <a asp-action="@nameof(IGameQuestionFormActions.GameQuestionCreate)" asp-route-id="@Model.Questions[i].Id">Dodaj</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                    @* potrzebne do filtrowania kolumn! *@
                    <tfoot>
                        <tr>
                            <th>Kategoria: </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>

                </table>
            </div>
            <br />
        </div>

        @*Tabela wybranych pytań*@

        <div class="col-md-6">

            <h2>Wybrane pytania</h2>
            <br />

            <div class="table-wrapper-scroll-y scrollbar-secondary">
                <table class="table data-table table-card-layout">
                    <thead>
                        <tr>
                            <th scope="col">Treść</th>
                            <th scope="col">Akcja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.GameQuestions.Count; ++i)
                        {
                            <tr>
                                <td class="d-lg-table-cell">@Model.GameQuestions[i].Content</td>
                                <td>
                                    <a asp-action="@nameof(IGameQuestionFormActions.GameQuestionDelete)" asp-route-id="@Model.GameQuestions[i].Id">Usuń</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
        </div>
    </div>

    <button type="submit" class="btn btn-primary" asp-action="@nameof(IGameQuestionFormActions.QuestionPoolCreate)">Zatwierdź pytania</button>

</form>


