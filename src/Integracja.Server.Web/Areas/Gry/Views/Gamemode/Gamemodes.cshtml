@using Integracja.Server.Web.Areas.Gry.Models.Gamemode
@using static Integracja.Server.Web.Areas.Gry.Models.Gamemode.GamemodeViewModel
@using static Integracja.Server.Web.Areas.Gry.Models.Gamemode.IGamemodeActions
@model GamemodeViewModel

<h2>Tryby gry</h2>
<br />

<div class="table-wrapper-scroll-y scrollbar-secondary">
    <table class="table table-bordered table-striped table-sm ">
        <thead>
            <tr>
                <th scope="col">Nazwa gry</th>
                <th scope="col">Liczba żyć</th>
                <th scope="col">Czas na quiz</th>
                <th scope="col">Czas na pytanie</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Gamemodes.Count; ++i)
            {
                <tr>
                    <td>
                        <a asp-action="@nameof(IGamemodeActions.GamemodeRead)" asp-route-id="@Model.Gamemodes[i].Id">
                            @Model.Gamemodes[i].Name
                        </a>
                    </td>
                    <td>@Model.Gamemodes[i].NumberOfLives</td>
                    <td>@Model.Gamemodes[i].TimeForFullQuiz</td>
                    <td>@Model.Gamemodes[i].TimeForOneQuestion</td>
                    <td>
                        <a asp-action="@nameof(IGamemodeActions.GamemodeUpdateView)" asp-route-id="@Model.Gamemodes[i].Id">Edytuj</a> |
                        <a asp-action="@nameof(IGamemodeActions.GamemodeDelete)" asp-route-id="@Model.Gamemodes[i].Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />

<div>
    <a class="btn btn-primary"
       asp-action="@nameof(IGamemodeActions.GamemodeCreateView)">
        Stwórz nowy tryb gry
    </a>
</div>

