@model QuestionViewModel

<h2>@Model.Title</h2>
<br />
<form asp-controller="@Model.Controller" asp-action="QuestionAdd" asp-route-id="@Model.Question.CategoryId">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Question.Content" class="control-label"></label>
        <textarea asp-for="Question.Content" class="form-control"></textarea>
        <span asp-validation-for="Question.Content" class="text-danger"></span>
    </div>

    @*tworzenie odpowiedzi do pytania*@
    <h2>Odpowiedzi</h2>
    <br />
    @{ int N;
        if (Model.EditMode)
        {
            N = Model.Answers.Count;
        }
        else
        {
            N = Model.Question.Answers.Count();
        }
    }
    @for (int i = 0; i < N; ++i)
    {
        <div class="form-group">
            <div class="form-inline">
                @{ if (Model.EditMode)
                    {
                        <input asp-for="Answers[i].Content" class="form-control" />
                    }
                    else
                    {
                        <input asp-for="Question.Answers.ToList()[i].Content" class="form-control" disabled />
                    }
                }
                <input asp-for="Answers[i].IsCorrect" class="form-check" type="checkbox" />
            </div>
        </div>
    }

    @* TODO: przyciski do dodawania/usuwania pól odpowiedzi *@
    @if (Model.EditMode)
    {
        <div class="form-group">
            <input type="submit" asp-action="AnswerFieldAdd" formnovalidate value="Dodaj nową odpowiedź" class="btn btn-light"/>
            <input type="submit" asp-action="AnswerFieldAdd" formnovalidate value="Usuń odpowiedź" class="btn btn-light"/>
        </div>
    }

    <h2>Punktacja</h2>
    <br />

    <div class="form-group">
        <input asp-for="Question.PositivePoints" type="number" class="form-control input-number" />
    </div>

    <h4>Tryb</h4>
    <div class="form-group">
        <div class="radio">
            <label class="radio">
                <input asp-for="Question.QuestionScoring" value="@Integracja.Server.Core.Enums.QuestionScoring.ScoreIfFullyCorrect" type="radio" checked>
                Tylko za komplet poprawnych odpowiedzi
            </label>
        </div>
        <div class="radio">
            <label class="radio">
                <input asp-for="Question.QuestionScoring" value="@Integracja.Server.Core.Enums.QuestionScoring.ScorePerGoodAnswer" type="radio">
                Za pojedynczą poprawną odpowiedź
            </label>
        </div>
    </div>

    <h4>Złe odpowiedzi</h4>

    <div class="form-group">
        <input asp-for="Question.NegativePoints" type="number" class="form-control input-number" />
    </div>

    <br />

    <div class="form-group">
        <input type="submit" value="Dodaj pytanie" class="btn btn-primary" />
    </div>
</form>
